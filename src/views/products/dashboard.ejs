<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/partialHead.ejs') %>
        <link rel="stylesheet" href="../css/dashboard-styles.css">
        <title>Dashboard - Poliforma</title>
</head>

<body>
    <%- include('../partials/partialsHeaderLoginRegister.ejs') %>


        <section class="contenedor-dashboard">
            <h1>Dashboard Productos</h1>

        <table class="dashboard">
            <a href="/products/createProduct" class="btn-crear"><i class="fa-solid fa-plus"></i> Crear producto</a>
            <thead>
                <th>ID</th>
                <th>Imagen</th>
                <th>Nombre Producto</th>
                <th>Precio</th>
                <th colspan="3">Accion</th>
            </thead>
            <% products.forEach(product => { %>
            <tr>
                <td><%= product.id %></td>
                <td><img src="/images/<%= product.imagen %>" alt="<%= product.name%>" height="100px"></td>
                <td><%= product.nombre %><a href="products/detail/<%= product.id %>" class="name"><i class="fa-solid fa-eye"></i></a></td>
                <td><%= product.precio%>$</td>
                <td>
                    <a href="/products/editProduct/<%= product.id %>" class="btn"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                    <form action="/products/dashboard/<%=product.id%>?_method=DELETE" method="POST">
                                <button class="btn" type="submit" onclick="return confirm('¿Estás seguro que quieres eliminar este producto?')"><i class="fa-solid fa-trash"></i> Borrar</button>
                            </form>
                </td>
            </tr>
            <% }) %>
        </table>
    </section>
    <%- include('../partials/partialsFooter.ejs') %>

</body>

</html>
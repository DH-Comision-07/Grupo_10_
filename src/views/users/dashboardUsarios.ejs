<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/partialHead.ejs') %>
        <link rel="stylesheet" href="../css/users/dashboardUsers-styles.css">
        <title>Dashboard Usuarios - Poliforma</title>
</head>

<body>
    <%- include('../partials/partialsHeader.ejs') %>


        <main class="contenedor-dashboard">
            <section class="botones-titulos">

                <h1>Dashboard Usuarios</h1>
                <div class="botones">
                    <a href="/users/dashboard" class="btn-dashboards">Usuarios</a>
                    <a href="/products/dashboard" class="btn-dashboards">Productos</a>
                </div>
            </section>
            <section class="table-body">
                <table class="dashboard">
                    <thead>
                        <th>ID</th>
                        <th>Imagen</th>
                        <th>Nombre y Apellido</th>
                        <th>Email</th>
                        <th>Permisos</th>
                        <th colspan="3">Accion</th>
                    </thead>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td><img src="/images/usuarios/<%= user.imagen %>" alt="<%= user.nombre%>" height="80px">
                            </td>
                            <td class="nombre"><a href="/users/profile/<%= user.id %>" class="name">
                                    <%= user.nombre%> </br>
                                        <%= user.apellido%>
                                </a></td>
                            <td>
                                <%= user.email%>
                            </td>
                            <td>
                                <%= user.categoria%>
                            </td>
                            <td>
                                <a href="/users/editProfile/<%= user.id %>" class="btn"><i
                                        class="fa-solid fa-pen-to-square"></i> Editar</a>
                                <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
                                    <button class="btn" type="submit"
                                        onclick="return confirm('¿Estás seguro que quieres eliminar este usuario?')"><i
                                            class="fa-solid fa-trash"></i> Borrar</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </table>
            </section>
        </main>
        <%- include('../partials/partialsFooter.ejs') %>

</body>

</html>